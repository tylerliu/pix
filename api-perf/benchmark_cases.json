{
    "templates": {
        "cryptodev": {
            "eal_args": ["-a", "03:00.0,class=crypto,algo=1"]
        },
        "compressdev": {
            "eal_args": ["-a", "03:00.0,class=compress"]
        },
        "dpdk": {
            "eal_args": ["-a", "auxiliary:mlx5_core.sf.4"]
        }
    },
    "benchmarks": {
        "rte_memcpy": {
            "params": {
                "size": [32, 128, 512, 2048]
            }
        },
        "rte_eth_tx_burst": {
            "params": {
                "pkt_size": [64, 256, 1024, 1472],
                "burst_size": [1, 2, 8, 32]
            }
        },
        "rte_eth_rx_burst": {
            "params": {
                "burst_size": [1, 2, 4, 8, 32]
            }
        },
        "rte_raw_cksum": {
            "params": {
                "pkt_size": [64, 128, 512, 2048]
            }
        },
        "rte_ipv4_cksum": {},
        "rte_ipv4_udptcp_cksum": {
            "params": {
                "pkt_size": [64, 256, 1024, 1472]
            }
        },
        "rte_ipv4_phdr_cksum": {},
        "rte_cryptodev_sym_session_create_free": {},
        "rte_crypto_op_bulk_alloc_free": {
            "params": {
                "bulk_size": [1, 2, 8, 32]
            }
        },
        "rte_crypto_op_attach_sym_session": {},
        "rte_cryptodev_enqueue_dequeue_burst_encrypt": {
            "params": {
                "burst_size": [1, 2, 8, 32],
                "data_size": [32, 128, 512, 2048, 8192, 32768]
            }
        },
        "rte_cryptodev_enqueue_dequeue_burst_decrypt": {
            "params": {
                "burst_size": [1, 2, 8, 32],
                "data_size": [32, 256, 2048, 32768]
            }
        },
        "rte_compressdev_private_xform_create_free": {
            "grouped_params": {
                "algorithm_config": [
                    {"algorithm": "deflate", "checksum": "none"},
                    {"algorithm": "deflate", "checksum": "crc32"},
                    {"algorithm": "deflate", "checksum": "adler32"},
                    {"algorithm": "lz4", "checksum": "none"},
                    {"algorithm": "lz4", "checksum": "xxhash32"},
                    {"algorithm": "null", "checksum": "none"},
                    {"algorithm": "null", "checksum": "crc32"},
                    {"algorithm": "null", "checksum": "adler32"},
                    {"algorithm": "null", "checksum": "combined"}
                ]
            }
        },
        "rte_comp_op_bulk_alloc_free": {
            "params": {
                "bulk_size": [1, 2, 8, 32]
            }
        },
        "rte_compressdev_enqueue_dequeue_burst_decompress": {
            "setup_command": "python3 generate_compressed_data.py --output-dir compressed_data --data-sizes 32 256 2048 8192 32000 --data-types random text --algorithms deflate lz4 null",
            "params": {
                "burst_size": [1, 2, 8, 32],
                "data_size": [32, 256, 2048, 8192, 32000],
                "data_dir": ["compressed_data"]
            },
            "grouped_params": {
                "algorithm_config": [
                    {"algorithm": "deflate", "checksum": "none"},
                    {"algorithm": "lz4", "checksum": "none"},
                    {"algorithm": "lz4", "checksum": "xxhash32"},
                    {"algorithm": "null", "checksum": "none"},
                    {"algorithm": "null", "checksum": "crc32"},
                    {"algorithm": "null", "checksum": "adler32"},
                    {"algorithm": "null", "checksum": "combined"}
                ]
            }
        }
    }
}